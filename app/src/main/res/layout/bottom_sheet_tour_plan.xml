<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <View
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/colorBlack" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/passengers"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/colorGrayDark" />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/adult"
                android:id="@+id/adult_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                tools:ignore="ContentDescription" />
        <TextView
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_12sdp"
                android:text="@string/adults"
                android:id="@+id/text_adults"
                app:layout_constraintStart_toEndOf="@id/adult_image"
                app:layout_constraintTop_toTopOf="@+id/adult_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat"
                android:text="@string/_12_years"
                app:layout_constraintStart_toEndOf="@id/adult_image"
                app:layout_constraintTop_toBottomOf="@+id/text_adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:gravity="center"
                android:text="-"
                android:id="@+id/minus_adult"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@id/tv_adult"
                android:background="@drawable/sqaure_red_round_corner_dull"
                app:layout_constraintTop_toTopOf="@id/adult_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="HardcodedText" />
        <TextView
                android:gravity="center"
                android:text="@string/_1"
                android:id="@+id/tv_adult"
                android:textSize="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@id/plus_adult"
                app:layout_constraintTop_toTopOf="@id/adult_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"/>
        <TextView
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/plus_adult"
                android:gravity="center"
                android:text="+"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:background="@drawable/sqaure_red_round_corner"
                app:layout_constraintTop_toTopOf="@id/adult_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/child_image"
                android:src="@drawable/child"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                tools:ignore="ContentDescription" />
        <TextView
                android:textSize="@dimen/_12sdp"
                android:text="@string/child"
                android:fontFamily="@font/montserrat"
                android:id="@+id/child_adults"
                app:layout_constraintStart_toEndOf="@id/child_image"
                app:layout_constraintTop_toTopOf="@+id/child_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat"
                android:text="@string/_2_12_yrs"
                app:layout_constraintStart_toEndOf="@id/child_image"
                app:layout_constraintTop_toBottomOf="@+id/child_adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:gravity="center"
                android:text="-"
                android:id="@+id/minus_child"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@id/tv_child"
                android:background="@drawable/sqaure_red_round_corner_dull"
                app:layout_constraintTop_toTopOf="@id/child_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="HardcodedText" />
        <TextView
                android:gravity="center"
                android:text="@string/_0"
                android:fontFamily="@font/montserrat"
                android:id="@+id/tv_child"
                android:textSize="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@id/plus_child"
                app:layout_constraintTop_toTopOf="@id/child_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"/>
        <TextView
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/plus_child"
                android:gravity="center"
                android:text="+"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:background="@drawable/sqaure_red_round_corner"
                app:layout_constraintTop_toTopOf="@id/child_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/baby"
                android:id="@+id/infant_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                tools:ignore="ContentDescription" />
        <TextView
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat"
                android:text="@string/infant"
                android:id="@+id/text_infant"
                app:layout_constraintStart_toEndOf="@id/infant_image"
                app:layout_constraintTop_toTopOf="@+id/infant_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat"
                android:text="@string/below_2yrs"
                app:layout_constraintStart_toEndOf="@id/infant_image"
                app:layout_constraintTop_toBottomOf="@+id/text_infant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:gravity="center"
                android:text="-"
                android:id="@+id/minus_infant"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@id/tv_infant"
                android:background="@drawable/sqaure_red_round_corner_dull"
                app:layout_constraintTop_toTopOf="@id/infant_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="HardcodedText" />
        <TextView
                android:gravity="center"
                android:text="@string/_0"
                android:id="@+id/tv_infant"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/montserrat"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@id/plus_infant"
                app:layout_constraintTop_toTopOf="@id/infant_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"/>
        <TextView
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/plus_infant"
                android:gravity="center"
                android:text="+"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:background="@drawable/sqaure_red_round_corner"
                app:layout_constraintTop_toTopOf="@id/infant_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:background="@drawable/background_cancel"
            android:textAllCaps="false"
            android:id="@+id/done"
            android:text="@string/done"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"/>
</LinearLayout>